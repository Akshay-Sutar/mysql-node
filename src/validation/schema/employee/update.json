      "minLength": 6,
      "maxLength": 6
    },
    "salary": {
      "type": "number",
      "maximum": 9999999999
    },
    "dept_id": {
      "type": "integer"
    },
    "manager_id": {
      "type": "integer"
    },
    "hired_date": {
      "type": "string",
      "format": "date",
      "formatMinimum": "2021-01-01",
      "formatMaximum": "2022-01-01"
